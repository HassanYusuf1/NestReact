{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/api/Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
          "label": "stop-dotnet",
          "type": "shell",
          "command": "pkill",
          "args": [
              "-f",
              "dotnet"
          ],
          "problemMatcher": []
        },
        {
          "label": "stop-frontend",
          "type": "shell",
          "command": "pkill",
          "args": [
              "-f",
              "react-scripts"
          ],
          "problemMatcher": []
        }
    ]
  }
  